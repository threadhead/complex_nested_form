- model_class = SubUnit
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:organization_id) + ':'
  %br
  = @sub_unit.organization_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @sub_unit.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), sub_units_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_sub_unit_path(@sub_unit), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), sub_unit_path(@sub_unit), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
