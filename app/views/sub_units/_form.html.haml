= form_for @sub_unit, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :organization_id, :class => 'control-label'
    .controls
      = f.number_field :organization_id, :class => 'number_field'
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), sub_units_path, :class => 'btn'
